@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
    <li data-target="#myCarousel" data-slide-to="1"></li>
    <li data-target="#myCarousel" data-slide-to="2"></li>
    <li data-target="#myCarousel" data-slide-to="3"></li>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner">
    <div class="item active">
      <img class="d-block w-100" src="~/images/computer1920.jpg" href="http://google.com" alt="Los Angeles">
      <div class="carousel-caption d-none d-md-block">
        <li><a class="btn btn-lg btn-outline-success" asp-area="" asp-controller="Home" asp-action="Services"><h1>Zarezerwuj wizytę już dzisiaj</h1></a></li></h1>
        <p>Sprawdź nasz system rejestracji online!</p>
    </div>
    </div>

    <div class="item">
      <img class="d-block w-100" src="~/images/doctor1920.jpg" alt="Rezerwacja">
      <div class="carousel-caption d-none d-md-block">
        <li><a class="btn btn-outline-success" asp-area="" asp-controller="Home" asp-action="Services"><h1>Kadra</h1></a></li></h1>
        <p>Mamy najlepszych specjalistów!</p>
    </div>
    </div>

    <div class="item">
      <img class="d-block w-100" src="~/images/dentist1920.jpg" alt="New York">
    <div class="carousel-caption d-none d-md-block">
        <li><a class="btn btn-outline-success" asp-area="" asp-controller="Home" asp-action="Services"><h1>Lista usług</h1></a></li></h1>
        <p>Nasze możliwości są naprawdę duże!</p>
    </div>
    </div>
    <div class="item">
      <img class="d-block w-100" src="~/images/stetoskop1920.jpg" alt="New York">
        <div class="carousel-caption d-none d-md-block">
        <li><a class="btn btn-outline-success" asp-area="" asp-controller="Todo" asp-action="About"><h1>O nas</h1></a></li></h1>
        <p>Cieszymy się bogatą historią i zaufaniem wielu pacjentów!</p>
    </div>
    </div>
  </div>

  <!-- Left and right controls -->
  <a class="left carousel-control" href="#myCarousel" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="right carousel-control" href="#myCarousel" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

<div class="container info">
    <div class="row">
        <div class="col-lg-4">
          <img class="rounded-circle" src="~/images/cardiogram.svg" alt="nurse" width="140" height="140">
          <h2>Nasza historia</h2>
          <p>Dbamy o zdrowie naszych pacjentów od dawna. Sprawdź naszą historię i ośiagnięcia</p>
          <p><a class="btn btn-secondary" asp-controller="Home" asp-action="About" role="button">O nas &raquo;</a></p>
        </div><!-- /.col-lg-4 -->
        <div class="col-lg-4">
          <img class="rounded-circle" src="~/images/computer.svg" alt="nurse" width="140" height="140">
          <h2>Nasze usługi</h2>
          <p>Prowadzimy usługi w wielu dziedzinach medycyny. Sprawdź listę naszych usług już teraz!</p>
          <p><a class="btn btn-secondary" asp-controller="Home" asp-action="Services" role="button">Lista usług &raquo;</a></p>
        </div><!-- /.col-lg-4 -->
        <div class="col-lg-4">
          <img class="rounded-circle" src="~/images/nurse.svg" alt="nurse" width="140" height="140">
          <h2>Najlepsi specjaliści</h2>
          <p>Cieszymy sie że posiadaniem w naszych kręgach najlepszych specjalistów światowej skali!</p>
          <p><a class="btn btn-secondary" asp-controller="Home" asp-action="Employees" role="button">Nasza kadra &raquo;</a></p>
        </div><!-- /.col-lg-4 -->
    </div><!-- /.row -->
</div>
