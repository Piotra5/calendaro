@model EmployeesListViewModel
@using CalendaroNet.Models.Employee

@{
    ViewData["Title"] = "Manage your employees";
}

  <button type="button" class="btn btn-primary btn-lg">
                <a asp-controller="Employee" 
                   asp-action="AddEmployee">
                   Dodaj
                </a></button>
  <button type="button" class="btn btn-danger btn-lg" asp-controller="Service" 
   asp-action="Index">Usu≈Ñ</button>

<div class="panel panel-default service-panel">
  <div class="panel-heading">@ViewData["Title"]</div>

  <table class="table table-hover">
      <thead>
          <tr>
              <td>Name</td>
              <td>Employment Date</td>
              <td>Contract End Date</td>
              <td>Salary</td>
              <td>AdedBy</td>
              <td>EditedBy</td>

          </tr>
      </thead>

      @foreach (var employee in Model.Employees)
      {
          <tr>

              <td>@employee.Name</td>
              <td>@employee.EmploymentDate</td>
              <td>@employee.EmploymentDate</td>
              <td>@employee.ContractEndDate</td>
              <td>@employee.BaseMonthSalary</td>
              <td>@employee.AdedBy</td>
              <td>@employee.EditedBy</td>
          </tr>
      }
  </table>

</div>